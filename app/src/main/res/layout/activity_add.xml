<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/AddTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj Nowy"
        android:textSize="35sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/NameAddTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa Przedmiotu:"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/NameAddEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Wpisz Nazwę Przedmiotu" />

    <TextView
        android:id="@+id/GradeAddTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocena:"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/GradeAddEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:hint="Wpisz Ocenę" />

    <Button
        android:id="@+id/AddButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="DODAJ"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"/>

</LinearLayout>